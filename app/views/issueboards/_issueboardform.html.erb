<table class="table table-striped table-bordered">
	<tr>
		<td class="col-md-2">Summary: </td>
		<td><%= f.text_field :issuesummary, class: 'form-control' %></td>
	</tr>
	<tr>
		<td class="col-md-2">Project: </td>
		<td id="issue_projectname"><% if @projectcontrol %><%= @projectcontrol.projectname %><%end%></td>
	<tr>
		<td class="col-md-2">Category: </td>
		<td id="issue_projectcategory"><% if @projectcontrol %><%= helper_get_categoryprojectstring(@projectcontrol.categoryproject_id) %><%end%></td>
	</tr>
	<tr>
		<td class="col-md-2">Software Type: </td>
		<td id="issue_projecttype"><% if @projectcontrol %><%= helper_get_osplatform_obj(@projectcontrol.osplatform_id).osdescribe %><%end%></td>
	</tr>
	<tr>
		<td class="col-md-2">Platform: </td>
		<td id="issue_projectplatform"><% if @projectcontrol %><%= helper_get_osplatformstring(@projectcontrol.hwplatform_id) %><%end%></td>
	</tr>
	<tr>
		<td class="col-md-2">Customer: </td>
		<td id="issue_projectcustomer"><% if @projectcontrol %><%= helper_get_customercompany(@projectcontrol.customer_id) %><%end%></td>
	</tr>

	<tr>
		<td class="col-md-2">Issue Reason: </td>
		<td><%= f.collection_select :bugreason_id, @bugreasons, :id, :bugdescriptionstring, {:include_blank=> false}, {:class => "form-control"} %></td>
	</tr>
<%
=begin 
%>
	<tr>
		<td class="col-md-2">Status: </td>
		<td><%= f.collection_select :status_id, @statuses, :id, :statusstring, {:include_blank=> false}, {:class => "form-control"} %></td>
	</tr>
<%
=end 
%>
	<tr>
		<td class="col-md-2">Description:</td>
		<td><%= f.text_area :issuedescription, class: 'form-control', rows: "10" %></td>
	</tr>
	<tr>
		<td class="col-md-2"><%= f.submit "Submit", class: 'form-control' %></td>
	</tr>
</table>